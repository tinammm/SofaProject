<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/home_team"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:orientation="horizontal"
        android:visibility="gone">

        <include
            android:id="@+id/type_item_start"
            layout="@layout/type_item_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/score_home"
            style="@style/headlineOneDarkText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="28dp"
            android:layout_marginVertical="20dp"
            android:text="@string/score_text"
            tools:hint="1 - 1" />

        <TextView
            android:id="@+id/home_player_name"
            style="@style/body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginVertical="20dp"
            android:layout_marginEnd="16dp"
            android:gravity="start"
            tools:hint="Christiano Ronaldo" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/away_team"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal"
        android:visibility="visible">

        <TextView
            android:id="@+id/away_player_name"
            style="@style/body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginVertical="20dp"
            android:layout_marginStart="16dp"
            android:gravity="end"
            tools:hint="Christiano Ronaldo" />

        <TextView
            android:id="@+id/score_away"
            style="@style/headlineOneDarkText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="28dp"
            android:layout_marginVertical="20dp"
            android:text="@string/score_text"
            tools:hint="1 - 1" />

        <include
            android:id="@+id/type_item_end"
            layout="@layout/type_item_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />
    </LinearLayout>

</LinearLayout>